<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    
    
<mapper namespace="boardNotice">

	<!-- 시퀀스 생성 -->
	<select id="sequence" resultType="int">
		select notice_seq.nextval from dual
	</select>
	<!-- Create  -->
	<!-- 이거 companyNo 이런식으로 하는 거 아닌거같은데  -->
	<insert id="save">
		insert into board_notice (
			notice_no, company_no, notice_title, notice_content, notice_writer, notice_wtime
		)
		values (#{noticeNo}, #{companyNo}, #{noticeTitle}, #{noticeContent}, #{noticeWriter}, #{noticeWtime})
	</insert>
	
	
	
	<!-- Read  -->
	<select id="list" resultType="boardNoticeDto">
		select * from board_notice order by notice_no desc
	</select>
	<select id="find" resultType="boardNoticeDto">
		select * from board_notice where notice_no = #{noticeNo}
	</select>
	
	
	<!-- Delete  -->
	<delete id="delete">
		delete board_notice where notice_no = #{noticeNo}
	</delete>


</mapper>